generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

model Jobs {
  id              String   @id @default(uuid())
  title           String
  companyName     String
  imageUrl        String?
  location        String
  description     String
  requirements    String?
  responsibilities String?
  jobType         JobType
  minimumSalary   Int?
  maximumSalary   Int?
  applicationDeadline DateTime
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}